<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="offset-2 col-8">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= err.message %></h4>
      <% if (process.env.NODE_ENV !== 'production') { %>
        <p>■エラーログ</p>
        <hr>
        <p><%= err.stack %></p>
      <% } %>
    </div>
  </div>
</div>
