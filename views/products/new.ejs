<% layout('layouts/boilerplate') %>

<div class="row">
  <h2 class="text-center">商品 新規登録</h2>

  <div class="offset-md-3 col-md-6 mt-4">
    <form action="/products" method="POST" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label"  for="productname">商品名</label>
        <input class="form-control" type="text" name="product[productname]" id="productname" required>
        <div class="valid-feedback">
          OK!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="largeclassname">大分類</label>
        <select class="form-select" name="product[largeclassname]" id="largeclassname">
            <% for (let largeclass of largeclasses) { %>
              <option value="<%= largeclass.largeclassname %>"><%= largeclass.largeclassname %></option>
            <% } %>
        </select>
        <div class="valid-feedback">
          OK!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="middleclassname">中分類</label>
        <select class="form-select" name="product[middleclassname]" id="middleclassname">
            <% for (let middleclass of middleclasses) { %>
              <option value="<%= middleclass.middleclassname %>"><%= middleclass.middleclassname %></option>
            <% } %>
        </select>
        <div class="valid-feedback">
          OK!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="inventoryunitprice">在庫単価</label>
        <div class="input-group">
          <span class="input-group-text" id="inventoryunitprice-label">￥</span>
          <input type="text" class="form-control" id="inventoryunitprice" placeholder="" aria-label="在庫単価" aria-describedby="inventoryunitprice-label" name="product[inventoryunitprice]" required>
        </div>
        <div class="valid-feedback">
          OK!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label"  for="productdescription">説明</label>
        <textarea class="form-control" type="text" name="product[description]" id="productdescription" rows="5"></textarea>
        <div class="valid-feedback">
          OK!
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">登録する</button>
      </div>

    </form>
    <a href="/products">一覧に戻る</a>
  </div>
</div>

