<% layout('layouts/boilerplate') %>

<div class="row">
  <h2 class="text-center">ユーザー 編集</h2>

  <div class="offset-md-3 col-md-6 mt-4">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
    <form action="/users" method="POST">
      <div class="mb-3">
        <label class="form-label"  for="username">ユーザー名</label>
        <input class="form-control" type="text" name="user[username]" id="username" value="<%= user.username %>" required>
        <div class="valid-feedback">
          OK!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label"  for="email">メールアドレス</label>
        <input class="form-control" type="email" name="user[email]" id="email"  value="<%= user.email %>"required>
        <div class="valid-feedback">
          OK!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="largeclass">権限</label>
        <select class="form-select" name="user[authority]" id="authority">
          <option value="00" <%= user.authority === '00' ? 'selected' : '' %>>一般ユーザー</option>
          <option value="99" <%= user.authority === '99' ? 'selected' : '' %>>管理者</option>
        </select>
        <div class="valid-feedback">
          OK!
        </div>
      </div>

      <div class="d-flex">
        <div class="mb-3">
          <button class="btn btn-success">更新する</button>
        </div>
    </form>

        <form class="d-inline" action="/users/delete/<%= user._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger ms-2">削除する</button>
        </form>
      </div>

    <div>
      <a href="/users">一覧に戻る</a>
    </div>

  </div>
</div>
